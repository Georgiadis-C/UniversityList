<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UniversityList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UniversityList.Views"
    Title="UniversityList"
    Shell.TabBarBackgroundColor="Black"
    Shell.TabBarForegroundColor="LightGray"
    Shell.TabBarTitleColor="LightGray">

    <TabBar>
        <Tab Title="List" Icon="to_do_list.png">
            <ShellContent 
            ContentTemplate="{DataTemplate views:StudentListPage}" />
    </Tab>

    <Tab Title="Add/Update" Icon="student.png">
        <ShellContent 
            ContentTemplate="{DataTemplate views:AddUpdateStudentDetail}" />
    </Tab>
    </TabBar>
</Shell>   